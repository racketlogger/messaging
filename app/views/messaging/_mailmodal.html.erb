                                            <div class="modal fade" tabindex="-1" role="dialog">
                                                <div class="modal-dialog">
                                                    <% msg.seen = "1" %>
                                                    <% msg.save!(:seen => "1") %>
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                                            <h4 class="modal-title"><i class="fa fa-envelope-o"></i> Message</h4>
                                                        </div>
                                                        <form action="#" method="post">
                                                            <div class="modal-body">
                                                                <div class="form-group">
                                                                    <div class="input-group">
                                                                        <span class="input-group-addon">FROM:</span> <p  class ="form-control"><%= @user_ids[@msg.sent_messageable_id.to_s] %></p>
                                                                    </div>
                                                                </div>
                                                                <div class="form-group">
                                                                    <div class="input-group">
                                                                        <span class="input-group-addon">SUBJECT:</span> <p  class ="form-control"><%= @msg.topic %></p>
                                                                    </div>
                                                                </div>
                                                                <div class="form-group">
                                                                    <div class="input-group">
                                                                        <span class="input-group-addon">BODY:</span> <p  class ="form-control"><%= @msg.body %></p>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="modal-footer clearfix">
                                                                <%= link_to "Discard", delete_message_path(:id => @msg.id,:user => @msg.received_messageable_id), :class => "btn btn-danger" %>
                                                            </div>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
